{% extends 'base.html.twig' %}

{% block title %}Order index
{% endblock %}

{% block body %}
<h1>Liste des commandes</h1>
<div class="container">
	<table class="table">
		<thead>
			<tr>
				<th class="text-center">Id</th>
				<th class="text-center">RefOrder</th>
				<th class="text-center">Amount</th>
				<th class="text-center">OrderDate</th>
				<th class="text-center">Nom du client</th>
				<th class="text-center">actions</th>git 
			</tr>
		</thead>
		<tbody>
			{% for order in orders %}
				<tr>
					<td class="text-center">{{ order.id }}</td>
					<td class="text-center">{{ order.refOrder }}</td>
					<td class="text-center">{{ order.amount }}€</td>
					<td class="text-center">{{ order.orderDate ? order.orderDate|date('d-m-Y / H:i') : '' }}</td>
					<td class="text-center">
						{{order.user.firstName}}
						{{order.user.lastname}}
					</td>
					<td class="text-center">
						<a href="{{ path('order_detail', {'order': order.id}) }}" class="btn btn-success">Voir détail</a>
					</td>
				</tr>
			</td>
		</tbody>
	</tr>
{% else %}
	<tr>
		<td colspan="5">no records found</td>
	</tr>
</table></div>{% endfor %}{# </tbody></table><a href="{{ path('app_order_new') }}">Create new</a> #}{% endblock %}
