{% extends 'dashboardbase.html.twig' %}

{% block title %}CategoryBlog index{% endblock %}

{% block body %}
    <h1>CategoryBlog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_blog in category_blogs %}
            <tr>
                <td>{{ category_blog.id }}</td>
                <td>{{ category_blog.name }}</td>
                <td>{{ category_blog.description }}</td>
                <td>
                    <a href="{{ path('app_category_blog_show', {'id': category_blog.id}) }}">show</a>
                    <a href="{{ path('app_category_blog_edit', {'id': category_blog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_blog_new') }}">Create new</a>
{% endblock %}
