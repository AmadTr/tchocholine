{% extends 'base.html.twig' %}
{% block title %}Hello products!
{% endblock %}
{% block body %}
	<h1>Liste des Livres</h1>

	<div class="row row-cols-1 row-cols-md-6 g-4">
		{% for product in products %}
			<div class="col">
				<div class="card h-100">
					<img src="{{ asset('build/images/' ~ product.photo) }}" class="card-img-top" alt="...">

					<div class="card-body">
						<h5 class="card-title">{{product.name}}</h5>
						<p class="card-text">{{product.description}}</p>
					</div>
					{% if is_granted('ROLE_ADMIN') %}
						<a class="btn btn-warning" href="{{path('app_product_edit',{'id': product.id}) }}" class="card-link">Modifier</a>
						<a class="btn btn-danger" href="{{path('app_product_delete',{'id': product.id})}}" class="card-link">supprimer</a>
					{% else %}
						<a class="btn btn-success" href="{{ path('cart_add',{'id':product.id}) }}">Ajouter au panier</a>
					{% endif %}
					</div>
				</div>

			{% endfor %}
		</div>
		{# </table> #}
		{# <a class="btn btn-primary" href="#">Cr√©ation d'un nouveau livre</a> #}
	{% endblock %}
