{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Votre profil</h1>
<div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>
{% if is_granted('ROLE_ADMIN') %}

    <a href="{{ path('app_user_index') }}">Retour</a>
{% else %}
    <a class="btn btn-success" href="{{ path('app_customer_indexProfile',{'id':user.id}) }}">Retour</a>
{% endif %}
    <a class="btn btn-warning" href="{{ path('app_customer_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('customer/_delete_form.html.twig') }}
</div>
{% endblock %}
